{
	"private": true,
	"type": "module",
	"scripts": {
		"build": "parcel build",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:js": "xo",
		"test": "run-p lint:* build",
		"watch": "parcel watch --no-hmr --no-cache --no-content-hash"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"unicorn/prefer-top-level-await": "off"
		}
	},
	"stylelint": {
		"extends": [
			"stylelint-config-xo"
		],
		"rules": {}
	},
	"dependencies": {
		"webext-base-css": "^2.1.0",
		"webext-options-sync": "^4.3.0"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.16.3",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.16.3",
		"stylelint": "^16.26.1",
		"stylelint-config-prettier": "^9.0.5",
		"stylelint-config-xo": "^1.0.2",
		"xo": "^1.2.3"
	},
	"targets": {
		"default": {
			"source": "source/manifest.json",
			"distDir": "./distribution"
		}
	},
	"webExt": {
		"sourceDir": "distribution",
		"run": {
			"startUrl": [
				"https://github.com/fregante/browser-extension-template"
			]
		}
	}
}
